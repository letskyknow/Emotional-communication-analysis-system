# Application
NODE_ENV=production
PORT=3000
FRONTEND_URL=http://localhost:3001

# Database
DATABASE_URL=postgresql://emotion_user:emotion_pass@postgres:5432/emotion_db
MONGODB_URI=mongodb://mongo:27017/emotion_tweets
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# Data Collection
MAX_KOLS=50
MAX_EVENTS=10
KOL_SCRAPE_INTERVAL=600000
EVENT_SCRAPE_INTERVAL=60000
SCRAPE_RETRY_ATTEMPTS=3
SCRAPE_RETRY_DELAY=5000

# Emotion Analysis
EMOTION_MODEL_NAME=uer/chinese_roberta_L-12_H-768
EMOTION_BATCH_SIZE=32
EMOTION_MAX_LENGTH=512
USE_GPU=false

# Queue Configuration
BULL_REDIS_HOST=redis
BULL_REDIS_PORT=6379
QUEUE_CONCURRENCY=5

# Monitoring
LOG_LEVEL=info